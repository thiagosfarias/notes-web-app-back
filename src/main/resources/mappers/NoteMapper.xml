<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.thiago.noteswebappback.mapper.NoteMapper">

    <resultMap id="Note" type="com.thiago.noteswebappback.models.Note">
        <id column="id" property="uuid" typeHandler="com.thiago.noteswebappback.mapper.typeHandler.UUIDTypeHandler"/>
        <result column="title" property="title"/>
        <result column="text" property="text"/>
        <result column="created" property="created"/>
        <result column="updated" property="updated"/>
        <result column="user_id" property="user" typeHandler="com.thiago.noteswebappback.mapper.typeHandler.UUIDTypeHandler"/>
    </resultMap>

    <insert id="insert"></insert>
    <delete id="delete"></delete>

    <select id="findAll" resultMap="Note">
        select * from notes.notes as n
        where n.user_id = #{uuid}
    </select>
</mapper>